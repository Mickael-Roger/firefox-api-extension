{
  "manifest_version": 3,
  "name": "Firefox REST API",
  "version": "1.0.8",
  "description": "Exposes a REST API for managing windows and tabs",

  "browser_specific_settings": {
    "gecko": {
      "id": "firefox-api-extension@famille-roger.com"
    }
  },

  "permissions": [
    "tabs",
    "nativeMessaging"
  ],

  "data_collection_permissions": {
    "collects_diagnostic_data": false
  },

  "background": {
    "service_worker": "background.js"
  }
}

