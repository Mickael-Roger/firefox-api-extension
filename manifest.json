{
  "manifest_version": 2,
  "name": "FF REST API",
  "version": "1.0.10",
  "description": "Exposes a REST API for managing windows and tabs",

  "browser_specific_settings": {
    "gecko": {
      "id": "ff-api-extension@famille-roger.com"
    }
  },

  "permissions": [
    "tabs",
    "nativeMessaging"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "ff-api-extension@famille-roger.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "background": {
    "scripts": ["background.js"]
  }
}

